FROM nginx:alpine

# Create directory for terminal files
RUN mkdir -p /usr/share/nginx/html

# Copy the terminal interface files
COPY public/index.html /usr/share/nginx/html/
COPY public/mesh/ /usr/share/nginx/html/mesh/

# Configure nginx
RUN echo "server { \
    listen 8080; \
    server_name localhost; \
    root /usr/share/nginx/html; \
    index index.html; \
    location / { \
        try_files \$uri \$uri/ /index.html; \
    } \
    location /mesh/ { \
        try_files \$uri \$uri/ /mesh/index.html; \
    } \
}" > /etc/nginx/conf.d/default.conf

# Expose only localhost port
EXPOSE 8080

# Start nginx
CMD ["nginx", "-g", "daemon off;"] 